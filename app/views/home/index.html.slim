section#speakers
  .container
    h2.section-header
      ' Speakers
      .line
    .row
      .col-sm-12.text-center
        - Speaker.find_by_identifiers(:matz, :tenderlove).each do |speaker|
          .speaker
            .speaker--avatar
              = image_tag speaker.avatar
            .speaker--info
              .speaker--name
                = speaker.name
              .speaker--tagline
                = speaker.tagline
      .col-sm-12.text-center.m-t
        - Speaker.find_by_identifiers(:hone02, :chancancode, :kerrizor).each do |speaker|
          .speaker
            .speaker--avatar
              = image_tag speaker.avatar
            .speaker--info
              .speaker--name
                = speaker.name
              .speaker--tagline
                = speaker.tagline

    .row
      .col-sm-12
        - Speaker.speakers.except(*Speaker::KEYNOTE_SPEAKERS).each do |_, speaker|
          - speaker = OpenStruct.new(speaker)

          hr.speaker-section-divider.line

          .row
            .col-sm-12.col-md-3
              .speaker
                .speaker--avatar
                  = image_tag speaker.avatar

                .speaker--info
                  .speaker--name
                    = speaker.name
                  .speaker--tagline
                    = speaker.tagline
                  .speaker--social
                    = link_to "#{Speaker::GITHUB_URL}#{speaker.github}" do
                      = icon('github', class: 'fa-2x')
                    = link_to "#{Speaker::TWITTER_URL}#{speaker.twitter}" do
                      = icon('twitter', class: 'fa-2x')

            .col-sm-12.col-md-5
              .speaker--title
                .speaker--topic
                  = speaker.topic
                p.speaker--description
                  = speaker.description

            .col-sm-12.col-md-4
              .speaker--topic
                ' Speaker's Bio
              p.speaker--bio
                = speaker.bio.html_safe

hr.section-divider

